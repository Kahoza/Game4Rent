<div class="show_page_wrapper">
 <div class="wrapper_game">
  <div class="wrapper_game_photo"><%=cl_image_tag @game.photo %></div>
  <div class="wrapper_game_name"><h1><%= @game.name %></h1></div>
  <div class="wrapper_game_description"><h2><%=@game.description.truncate(469)%></h2></div>
  <div class="wrapper_game_price"><p>Amount per day: <%= humanized_money_with_symbol(@game.price)%></p></div>
  <div class="wrapper_game_options"><%= link_to edit_game_path(@game) do %>
    <%= icon("fal fa-edit") %><span>Edit</span>
    <% end %>
    <%= link_to game_path(@game), method: :delete do %>
    <%= icon("fal fa-trash") %><span>Delete</span>
    <% end %>
    <%= link_to games_path do  %>
    <%= icon("fal fa-backward") %><span>Back</span>
    <% end %>
  </div>

</div>

<div class="wrapper-book-event">
<div class="wrapper-book-event-title">
<h3>Available dates</h3></div>
<% evts = @game.events.where( "start_date >= ? ", Date.today) %>
<% evts.each do |event| %>
  <!-- <div class="wrapper_event_dates">
   <div class="wrapper_event_dates_text">
    <p><%= event.start_date.strftime("%A %e %B ") do %></p>
  </div>
  <% end %>
</div> -->
 <div class="wrapper-book-event-date">
<button type="button"><%= event.start_date.strftime("%A %e %B ") %></button>
</div>
<% end %>
</div>

<div class="wrapper_game_address_map">
  <div class="wrapper_game_address">
<h3>You can pick up your game here;</h3>
  <h3><%= @game.address %></h3></div>
  <div
  id="map"

  data-markers="<%= @markers.to_json %>"
  ></div>
</div>

</div>



