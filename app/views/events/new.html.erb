<div class="text-center">
  <h2>Select dates</h2>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <%=  simple_form_for [@game, @event] do |f|%>
        <%= f.input :start_date, as: :date %>
        <%= f.input :end_date, as: :date %>

        <%= f.button :submit, "Submit", class: "btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
